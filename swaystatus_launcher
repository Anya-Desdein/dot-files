#!/usr/bin/sh

# Private environment variables for swaystatus
export SWAYSTATUS_TOKEN="mytoken"
export SWAYSTATUS_DIR="/tmp/swaystatus/"
export SWAYSTATUS_LOCATION="mylocation"
export ENERGY_POLL="energy_poll"
export SWAYSTATUS_ENABLE_SUSPEND_TO_RAM="TRUE"

# Line-buffered stdout so each status line is flushed immediately; no PTY (script)
# so swaybar always receives complete lines and doesn't ellipsize
exec stdbuf -oL -eL "$HOME/.local/bin/swaystatus"
